{
  "$jason": {
    "head": {
      "title": "TemplateNativeNewsFAB",
      "actions": {
        "$load":    { "type": "$render" },
        "navigate": {"type": "$default" }
      },
      "templates": {
        "body": {
	    "header": {		
			"title": {
			"type": "image",
				"style": {
					"align": "left",
					"left": "20",
					"width": "12",
					"height": "12"
							},
			"url": "https://DinaDurykina.github.io/squared-menu.png"},
			"style": {
            	"background": "#A9A9A9"
					},
			"menu": {
				"text": "Choose",
				"style": {
					"color": "#0000ff",
					"font": "HelveticaNeue-Bold",
					"size": "12"
							},
				"action": {
					"type": "$util.toast",
					"options": {
						"text": "Good job!"
								}
							}
					}
				},
        	"background": {
				"type": "html",
				"url": "http://www.brazuka.ru/",
				"action": { "trigger": "navigate" }
					},
		/*floating button on top of the site page*/
		"layers": [
            {
              "type": "image",
				"url": "https://DinaDurykina.github.io/ringer-volume.png",
              "style": {
                "bottom": "90",
                "right": "20",
                "background": "#ff0000",
                "color": "#ffffff",
                "width": "80",
                "height": "80",
                "align": "center",
                /*"size": "30",*/
                "corner_radius": "50"
              },
              "action": {
                "type": "$back"
              }
            }
          ],
	
		"footer": {
				"tabs": {
					"style": {
						"background": "#A9A9A9"	},
						"items": [{
							"image": "https://DinaDurykina.github.io/copy-2.png",
							"text": "Note",
       						 "style": {
         					 "height": "12"
								},
							"url":"https://DinaDurykina.github.io/copy2teh.json"
								}, {
							"image": "https://DinaDurykina.github.io/translation.png",
							"text": "Translate",
       						 "style": {
         					 "height": "12"
								},
							"url":"https://DinaDurykina.github.io/translate.json"
								}, {
							"image": "https://DinaDurykina.github.io/comments.png",
							"text": "Comment",
       						 "style": {
         					 "height": "12"
        					},
							"url":"https://DinaDurykina.github.io/SevenStringBrazukaLogin.json"
								}]
						}
					}
	    }
      }  
    }   
  }  
}  
